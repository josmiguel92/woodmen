{% extends "base.twig" %}

{% block content %}
    <section class="bg-gray-200">
        {% for post in home_hero %}
            <div class="grid home_hero grid-cols-9 grid-rows-6">
                <div class="col-start-1 col-end-3 row-start-1 row-end-6
             md:col-end-4 md:row-end-5 md:h-screen overflow-hidden ">
                    <img class="h-full"
                         src="{{ site.theme.link }}/static/img/wood-patern-3.jpg" alt="">
                </div>
                <div class="col-start-3 col-end-10 row-start-1 row-end-7 overflow-hidden">
                    <img class="min-h-full md:w-full" src="{{post.thumbnail.src}}"  alt=""/>
                </div>
                <div class="col-start-2 col-end-9 row-start-3 col-span-2 md:col-end-7">
                    <h2 class="text-3xl md:text-7xl font-heading text-white font-black">
                        <a href="{{post.link}}">{{post.title}}</a></h2>
                </div>
                <div class="col-start-2 col-span-2 row-start-5
            md:row-start-4 flex items-center">
                    <a href="{{ post.link }}" class="btn btn-accent md:btn-lg">
                        {{ __('See our offers') }}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="inline-block w-6 h-6 ml-2 stroke-current">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </a>
                </div>
            </div>
            {#        {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}#}
        {% endfor %}
    </section>

    <section class="product_show bg-gray-200 border-gray-200 border-solid mb-64">
        <div class="flex flex-col my-10 md:my-20 mx-5 md:mx-56 md:px-40 border-r-4 border-accent">
            <b class="product_heading text-xl mr-5 md:text-2xl font-display text-gray-500"> {{ __('Familiarize yourself with our rich offer') }}</b>
            <b class="mt-5 md:mt-10 product_heading text-4xl md:text-6xl font-heading"> {{ __('Familiarize yourself with our rich offer') }}</b>
        </div>

        <div class="products_grid flex flex-col md:grid gap-10 w-3/4 mx-auto -mb-64">
            {% for post in product %}
                <div class="card shadow-xl image-full border-r-0 bg-gray-500">
                    <figure>
                        <img src="{{post.thumbnail.src}}">
                    </figure>
                    <div class="justify-center card-body gap-8">
                        <p class="font-light tracking-widest text-gray-400">{{ post.post_excerpt }}</p>
                        <h2 class="card-title
                        {% if loop.index in [1,4] %}
                            text-3xl md:text-5xl font-heading font-bold my-16
                        {% else %}
                            text-2xl md:text-4xl font-display font-bold
                        {% endif %}
                        ">{{ post.title }}</h2>
                        {% if loop.index in [1,4] %}
{#                            <p>Rerum reiciendis beatae tenetur excepturi aut pariatur est eos. Sit sit necessitatibus veritatis sed molestiae voluptates incidunt iure sapiente.</p>#}
                        <div class="card-actions">
                            <a href="{{ post.link }}" class="btn btn-secondary">
                                Get Started
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="inline-block w-5 h-5 ml-2 stroke-current">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>

                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

    {% if aboutUs is not null %}
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
            <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
                <img class="object-cover object-center rounded" alt="hero" src="{{ aboutUs.thumbnail }}">
            </div>
            <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
                <h1 class="font-heading sm:text-4xl text-3xl mb-4 font-medium text-gray-900">
                    {{ aboutUs.alternate_title ?? aboutUs.post_title }}
                </h1>
                <p class="mb-8 leading-relaxed">{{ aboutUs.preview.read_more(' ')  }}</p>

{#                {{ dump(aboutUs.preview(50, false, " ") ) }}#}
                <div class="flex justify-center">
{#                     <a href="{{ .link }}" class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg">#}
{#                         Button</a>#}
                    <a href="{{ aboutUs.link }}" class="btn btn-accent">
                        {{ __('Read more') }}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="inline-block w-5 h-5 ml-2 stroke-current">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </a>
                </div>


            </div>
        </div>
    </section>
    {% endif %}

    
    {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
